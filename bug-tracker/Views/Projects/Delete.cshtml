@model bug_tracker.Models.ProjectModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete @Model.ProjectName?</h3>
<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class = "col-lg-2">
            @Html.DisplayNameFor(model => model.ProjectName)
        </dt>
        <dd class = "col-lg-10">
            @Html.DisplayFor(model => model.ProjectName)
        </dd>
        <dt class = "col-lg-2">
            @Html.DisplayNameFor(model => model.ProjectDescription)
        </dt>
        <dd class = "col-lg-10">
            @Html.DisplayFor(model => model.ProjectDescription)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Current Projects</a>
    </form>
</div>
